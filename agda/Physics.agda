  SU2 : GaugeGroup   -- слабое взаимодействие
  U1  : GaugeGroup   -- электромагнетизм

-- Стандартная Модель = SU(3) × SU(2) × U(1)

------------------------------------------------------------------------
-- СВЯЗЬ С ЗОНАМИ
------------------------------------------------------------------------

data Zone : Set where
  interior : Zone
  boundary : Zone
  exterior : Zone

gauge-zone : GaugeGroup -> Zone
gauge-zone SU3 = interior   -- конфайнмент
gauge-zone SU2 = boundary   -- P-нарушение
gauge-zone U1  = exterior   -- дальнодействие

