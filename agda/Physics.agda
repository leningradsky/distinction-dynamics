-- Радиус действия
data Range : Set where
  short : Range    -- 10^-15 м
  medium : Range   -- 10^-18 м  
  infinite : Range -- бесконечность

range : GaugeGroup -> Range
range SU3 = short     -- глюоны заперты
range SU2 = medium    -- W, Z массивные
range U1  = infinite  -- фотон безмассовый

-- Сохранение чётности
data Parity : Set where
  conserved : Parity
  violated  : Parity

parity : GaugeGroup -> Parity
parity SU3 = conserved   -- сильное сохраняет P
parity SU2 = violated    -- слабое нарушает P
parity U1  = conserved   -- EM сохраняет P

